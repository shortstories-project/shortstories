{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "pages": ["pages"],
      "components": ["components"],
      "higher-order-components": ["higher-order-components"],
      "images": ["assets/images"],
      "fonts": ["assets/fonts"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "public"
  ]
}
